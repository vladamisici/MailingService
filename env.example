# Mail API Server Configuration
# Copy this file to .env.local and fill in your values

# SMTP Configuration (Required)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# Email Settings
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Company Name

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000
EMAILS_PER_DAY=10000

# Queue Settings
QUEUE_CONCURRENCY=5
RETRY_ATTEMPTS=3
RETRY_DELAY=5000

# Security
API_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key
ALLOWED_ORIGINS=http://localhost:3000

# Database Configuration
# Use SQLite (file-based) for simple setups
DATABASE_URL="file:./dev.db"

# Or use PostgreSQL for production environments
# DATABASE_URL="postgresql://user:password@localhost:5432/mailservice?schema=public"

# Logging
LOG_LEVEL=info
LOG_FILE=logs/mail-service.log

# Analytics & Monitoring
ENABLE_ANALYTICS=true
WEBHOOK_SECRET=your-webhook-secret

# Public Access (Security Risk - Use with caution)
ALLOW_PUBLIC_ACCESS=false

# Development
NEXT_TELEMETRY_DISABLED=1
